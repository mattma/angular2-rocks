{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": false,
    "sourceMap": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": false
  },
  "files": [
    "typings/tsd.d.ts",
    "node_modules/immutable/dist/immutable.d.ts",
    "src/app/components/app/app.ts",
    "src/app/common/stores/main-store.ts",
    "src/app/main.ts",
    "src/app/vendor.ts"
  ],
  "filesGlob": [
    "./src/app/**/*.ts",
    "./test/**/*.ts",
    "!./node_modules/**/*.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}
